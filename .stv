stv() {
  if [[ $1 == "-v" ]]; then
    x=$@
    if [[ $2 == "ubuntu" ]]; then
        x=${x/-v ubuntu/}
        sudo apt $x
    elif [[ $2 == "arch" ]]; then
        x=${x/-v arch/}
        distrobox-enter -H arch -- sudo pacman $x
    elif [[ $2 == "fedora" ]]; then
        x=${x/-v fedora/}
        distrobox-enter -H fedora -- sudo dnf $x
    else
        echo "Command Not Found"
    fi
  fi
}
